       else if ( colName.equals("VISITOR_GROWTH") ) {
         Label lbl = new Label( pctFmt.format(rs.getInt( colName )) );
         lbl.setStyle("font-weight:bold;");
         myRow.appendChild( lbl );
       }
     }
     tableRows.appendChild( myRow );
    }

